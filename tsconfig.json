{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution":"node",
    "sourceMap": true,
    "declaration": true
  },
  "filesGlob": [
    "src/**/*.ts",
    "!build/**/*",
    "!node_modules/**/*",
    "typings/index.d.ts",
    "node_modules/alfresco-js-api/dist/**/*.ts"
  ],
  "exclude": [
    "build/**/*",
    "node_modules",
    "typings/global",
    "typings/global.d.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
